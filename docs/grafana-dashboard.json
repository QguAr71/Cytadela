{
  "dashboard": {
    "title": "Citadel DNS Infrastructure",
    "tags": ["citadel", "dns", "infrastructure"],
    "timezone": "browser",
    "schemaVersion": 36,
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Status",
        "type": "stat",
        "targets": [
          {
            "expr": "citadel_service_up",
            "legendFormat": "{{service}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "Down"
                  },
                  "1": {
                    "text": "Up"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "DNS Cache Hit Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "(citadel_dns_cache_hits_total / (citadel_dns_cache_hits_total + citadel_dns_cache_misses_total)) * 100",
            "legendFormat": "Hit Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "green",
                  "value": 80
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "DNS Requests by Type",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(citadel_dns_requests_total[5m])",
            "legendFormat": "{{type}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps"
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Blocklist Entries",
        "type": "stat",
        "targets": [
          {
            "expr": "citadel_blocklist_entries",
            "legendFormat": "Entries"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 4,
          "w": 8,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 5,
        "title": "Firewall Status",
        "type": "stat",
        "targets": [
          {
            "expr": "citadel_firewall_active",
            "legendFormat": "Active"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "Inactive"
                  },
                  "1": {
                    "text": "Active"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 8,
          "x": 8,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "System Load",
        "type": "stat",
        "targets": [
          {
            "expr": "citadel_system_load_average",
            "legendFormat": "Load"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 4,
          "w": 8,
          "x": 16,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "DNS Resolution Status",
        "type": "stat",
        "targets": [
          {
            "expr": "citadel_dns_resolution",
            "legendFormat": "DNS"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "Fail"
                  },
                  "1": {
                    "text": "OK"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 12,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 8,
        "title": "Citadel Version",
        "type": "stat",
        "targets": [
          {
            "expr": "citadel_info",
            "legendFormat": "{{version}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "options": {
                  "1": {
                    "text": "Running"
                  }
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {
          "h": 4,
          "w": 12,
          "x": 12,
          "y": 20
        }
      }
    ]
  },
  "overwrite": false,
  "inputs": [
    {
      "name": "DS_PROMETHEUS",
      "type": "datasource",
      "pluginId": "prometheus",
      "value": "Prometheus"
    }
  ]
}
